# Production environment configuration template
# Copy this to .env and customize for your deployment

# Docker Compose - Host path to mount (absolute path on your server)
MUSIC_DIR_HOST=/path/to/your/music

# Container paths (usually don't need to change these)
MUSIC_DIR=/music
DATA_DIR=/data

# Startup behavior
SCAN_ON_START=true

# Auto-reshuffle queue every N seconds (0 = disabled, recommended for most users)
# Set to 3600 for hourly reshuffle, 86400 for daily, etc.
QUEUE_REFRESH_SECONDS=0
